<div class = "container">
  <div class = "row">
    <div class = "col-md-10 offset-md-2 mx-auto">
      <table>
          <thead>
              <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
              </tr>
          </thead>
          <tbody id="book">
            <% books.each do |book| %>
              <tr>
                <td>
                <%= link_to user_path(book.user_id) do %>
                    <%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book.id) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>