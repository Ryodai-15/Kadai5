<div class = "container">
  <div class = "row">
    <div class = "col-md-10 offset-md-2 mx-auto">
      <% if @model == 'user' %>
        <h3>【Usersモデルの検索結果】検索ワード：<%= @content %></h3>
        <%= render 'users/index', users: @records %>
      <% else @model == 'book' %>
        <h3>【Booksモデルの検索結果】検索ワード：<%= @content %></h3>
          <%= render 'books/index', books: @records %>
      <% end %>
    </div>
  </div>
</div>