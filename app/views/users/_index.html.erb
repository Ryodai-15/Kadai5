<div class = "container">
  <div class = "row">
    <div class = "col-md-10 offset-md-2 mx-auto">
      <table>
          <thead>
              <tr>
                  <th>image</th>
                  <th>name</th>
                  <th>introduction</th>
              </tr>
          </thead>
          <tbody id="user">
            <% users.each do |user| %>
              <tr>
                <td>
                <%= link_to user_path(user) do %>
                    <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                  <% end %>
                </td>
                <td><%= link_to user.name, user_path(user) %></td>
                <td><%= user.introduction %></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>